---
pageable: false
---
<% @class = "tags l-fullwidth" %>

<h1 class="heading">Tagged articles</h1>

<h2 class="pageHeadline"><%= tagname %></h2>

<ul class="articleList noList">
	<% page_articles.each_with_index do |article, i| %>
		<li class="articleListItem">
			<span class="articleHeadline"><%= link_to article.title, article.url %></span>
		</li>
	<% end %>
</ul>
