<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0'>
		<title><%= current_page.data.title + ' | ' unless current_page.nil? %> Angelique Weger</title>
		<%= stylesheet_link_tag "goals" %>
		<link href="https://fonts.googleapis.com/css?family=Leckerli+One|Flamenco|Pompiere" rel="stylesheet" type="text/css">
		<%= javascript_include_tag "libs/modernizr" %>
		<%= feed_tag :atom, "/feed.xml", title: "Atom Feed" %>
		<link rel="shortcut icon" type="image/x-icon" href="/favicon.png">
	</head>
	<body class="<%= @class %>" itemscope itemtype="http://schema.org/WebPage">
	<%= partial "partials/ga" %>
		<div class="container siteWrapper">
			<main class="elementWrapper" role="main" itemscope itemtype="http://schema.org/Blog">
				<%= yield %>      
			</main>
		</div> <!-- .container.siteWrapper -->

		<%= javascript_include_tag 'libs/jquery' %>
	</body>
</html>
