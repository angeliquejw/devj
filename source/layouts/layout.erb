<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0'>
		<title><%= current_article.title + ' | ' unless current_article.nil? %> Dev Journal | Angelique Weger</title>
		<%= stylesheet_link_tag "site" %>
		<%= javascript_include_tag "libs/modernizr" %>
		<%= feed_tag :atom, "/feed.xml", title: "Atom Feed" %>
		<link rel="shortcut icon" type="image/x-icon" href="/favicon.png">
	</head>
	<body class="<%= @class %>">
	<%= partial "partials/ga" %>

		<%= partial "partials/header" %>
		<div class="container siteWrapper">
			<main class="elementWrapper" role="main" itemscope itemprop="mainContentOfPage" itemtype="http://schema.org/Blog">
				<%= yield %>      
			</main>
			<%= partial "partials/aside" %>
		</div> <!-- .container.siteWrapper -->
		<%= partial "partials/footer" %>

		<%= javascript_include_tag 'libs/jquery' %>
		<%= javascript_include_tag 'layout' %>
		<%= javascript_include_tag 'libs/jquery.scrollTo' %>

	</body>
</html>
