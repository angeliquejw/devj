---
pageable: false
---
<% @class = "archives l-fullwidth" %>

<h1 class="heading">Article archives</h1>

<h2 class="pageHeadline">
  <% case page_type
     when 'day' %>
    <%= Date.new(year, month, day).strftime('%b %e %Y') %>
  <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%b %Y') %>
  <% when 'year' %>
    <%= year %>
  <% end %>
</h2>

<ul class="articleList noList">
  <% page_articles.each_with_index do |article, i| %>
    <li class="articleListItem">
      <span class="articleHeadline"><%= link_to article.title, article.url %></span>
    </li>
  <% end %>
</ul>
